<div class="aside">
	<h3 class="aside-title">Categories</h3>
	<div class="checkbox-filter">
		<form asp-controller="Store" asp-action="Index" method="post">
			@for (int i = 0; i < ViewBag.quantity_brand_list.Count; i++)
			{
				<div class="input-checkbox">

					<input name="AreChecked" type="checkbox" value="@Model[i].BrandName" id="@Model[i].BrandName" onclick="this.form.submit()" />

					<label for="@Model[i].BrandName">
						<span></span>
						@Model[i].BrandName
						<small>@ViewBag.quantity_brand_list[i]</small>
					</label>
				</div>
			}
		</form>
	</div>
</div>
